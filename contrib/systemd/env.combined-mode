# ==========================================
# Systemd: Combined mode (recommended for >50 VMs)
# ==========================================
# Quick checks + full sync on intervals.
#
# Usage on host / in LXC:
#   sudo cp contrib/systemd/env.combined-mode /etc/pve2netbox/env
#   (or create /etc/pve2netbox/env from this template)
# Run: sudo systemctl enable --now pve2netbox

# PVE API (required)
PVE_API_HOST=10.10.0.10
PVE_API_USER=netsync@pve
PVE_API_TOKEN=test-token
PVE_API_SECRET=your-secret-here

# NetBox API (required)
NB_API_URL=https://netbox.example.org
NB_API_TOKEN=your-netbox-token-here

# Optional
PVE_API_VERIFY_SSL=false
NB_CLUSTER_ID=1
NB_API_DELAY_SECONDS=0.2
NB_API_RETRY_TOTAL=5
NB_API_RETRY_BACKOFF=1.0

# Combined mode
QUICK_CHECK_INTERVAL_SECONDS=60
SYNC_INTERVAL_SECONDS=3600

SYNC_VMS=true
SYNC_LXC=true
