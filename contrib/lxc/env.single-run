# ==========================================
# LXC: Single-run
# ==========================================
# For one-off sync or via cron.
#
# Usage in LXC:
#   — Copy into container as /etc/pve2netbox/env
#   — Or place as .env in contrib/lxc/ (or repo root) before deploy-from-pve.sh
# Run: pve2netbox manually or via cron (do not set intervals).

# PVE API (required)
PVE_API_HOST=10.10.0.10
PVE_API_USER=netsync@pve
PVE_API_TOKEN=test-token
PVE_API_SECRET=your-secret-here

# NetBox API (required)
NB_API_URL=https://netbox.example.org
NB_API_TOKEN=your-netbox-token-here

# Optional
PVE_API_VERIFY_SSL=false
NB_CLUSTER_ID=1
NB_API_DELAY_SECONDS=0.2
NB_API_RETRY_TOTAL=5
NB_API_RETRY_BACKOFF=1.0

SYNC_VMS=true
SYNC_LXC=true

# NetBox device roles for VM and LXC (name or ID; created automatically if missing)
VM_ROLE=Virtual Machine
LXC_ROLE=Container

# Do not set SYNC_INTERVAL_SECONDS and QUICK_CHECK_INTERVAL_SECONDS — single run then exit.
